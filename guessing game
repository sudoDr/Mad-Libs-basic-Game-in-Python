secret_word = "ali baba"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = False

while guess != secret_word and not out_of_guesses:
    if guess_count < guess_limit:
        # Save the user's input to the 'guess' variable
        guess = input("Enter guess: ")
        guess_count += 1
    else:
        out_of_guesses = True

# Now we check why the loop finished
if out_of_guesses:
    print("Out of guesses, YOU LOSE!")
else:
    print("You win!")
